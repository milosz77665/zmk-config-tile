#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,matrix_transform = &default_transform;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <10>; // 5 na lewą + 5 na prawą połówkę
        rows = <4>;     // 4 rzędy na połówkę
        
        // Mapa logiczna przypisująca fizyczne przyciski do układu
        map = <
            RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4)   RC(0,5) RC(0,6) RC(0,7) RC(0,8) RC(0,9)
            RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4)   RC(1,5) RC(1,6) RC(1,7) RC(1,8) RC(1,9)
            RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4)   RC(2,5) RC(2,6) RC(2,7) RC(2,8) RC(2,9)
                            RC(3,2) RC(3,3) RC(3,4)   RC(3,5) RC(3,6) RC(3,7)
        >;
    };

    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        label = "KSCAN";
        
        // Ergogen domyślnie używa polaryzacji col2row. 
        // Jeśli wlutowałeś diody odwrotnie, zmienisz to na "row2col".
        diode-direction = "col2row"; 

        row-gpios
            = <&gpio0 20 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // top (P020)
            , <&gpio0 22 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // home (P022)
            , <&gpio0 29 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // bottom (P029)
            , <&gpio0 31 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // thumb (P031)
            ;

        col-gpios
            = <&gpio0 6 GPIO_ACTIVE_HIGH>  // pinky (P006)
            , <&gpio0 8 GPIO_ACTIVE_HIGH>  // ring (P008)
            , <&gpio1 6 GPIO_ACTIVE_HIGH>  // middle (P106)
            , <&gpio1 4 GPIO_ACTIVE_HIGH>  // index (P104)
            , <&gpio0 17 GPIO_ACTIVE_HIGH> // inner (P017)
            ;
    };
};